# OrchidBot Environment Variables Template
# Copy this file to .env and fill in your specific values

# System Configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=/home/runner/work/OrchidBot/OrchidBot/data/logs/orchidbot.log

# Hardware Configuration
GPIO_MODE=BCM
MOCK_HARDWARE=true  # Set to false for real hardware deployment

# Pump Control Pins (BCM numbering)
PUMP_PINS=18,19,20,26
PUMP_TIMEOUT=10.0  # Maximum pump runtime in seconds

# Sensor Configuration
I2C_BUS=1
MOISTURE_SENSOR_ADDRESSES=0x20,0x21,0x22,0x23
ADC_SPI_CHANNEL=0
OVERFLOW_SENSOR_PINS=21,22,23,24

# Status LED Pins
LED_POWER=5
LED_WIFI=6
LED_PUMP_ACTIVITY=12,13,16,17
LED_ALERT=27

# Web Dashboard
WEB_HOST=0.0.0.0
WEB_PORT=5000
SECRET_KEY=your-secret-key-here-change-this

# Database Configuration
DATABASE_URL=sqlite:///data/orchidbot.db
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=orchidbot
INFLUXDB_BUCKET=sensor_data

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/orchid-system
N8N_WEBHOOK_SECRET=your-webhook-secret-here
N8N_ALERT_WEBHOOK=http://localhost:5678/webhook/orchid-alert

# Weather API
WEATHER_API_KEY=your-openweathermap-api-key
LOCATION_LAT=40.7128
LOCATION_LON=-74.0060

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=orchidbot
MQTT_PASSWORD=your-mqtt-password
MQTT_TOPIC_PREFIX=orchidbot

# AI/ML Configuration
AI_MODEL_PATH=src/ai/models/orchid_health_v1.tflite
CAMERA_ENABLED=false
CAMERA_INTERVAL=3600  # seconds between photos

# Safety Configuration
EMERGENCY_STOP_PIN=25
WATCHDOG_TIMEOUT=30
MAX_DAILY_RUNTIME=1800  # Maximum daily pump runtime in seconds

# Watering Schedule
DEFAULT_MOISTURE_THRESHOLD=40.0
TARGET_MOISTURE_LEVEL=55.0
WATERING_INTERVAL=86400  # seconds (24 hours)
FLOOD_DURATION=300  # seconds (5 minutes)
DRAIN_DURATION=600  # seconds (10 minutes)